<!DOCTYPE html>
<html lang="en">
  <head>    <meta charset="utf-8">
    <% include ../partials/header.ejs %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Microe</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/new-event">New Event</a></li>
            <li><a href="#about">About</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="content">
      <h1>Create new event</h1>
      <form class="form-horizontal" action="/new-event-submit" method="post">

        <row>
        <div class="form-group">
          <label for="event-title" class="col-sm-2 control-label">Title</label>
          <div class="col-sm-6">
            <input name="eventTitle" class="form-control" id="event-title" placeholder="Title">
          </div>
        </div>
        </row>
        <div class="form-group">
          <label for="event-location" class="col-sm-2 control-label">Location</label>
          <div class="col-sm-6">
            <input name="eventLocation" class="form-control" id="event-location" placeholder="Location">
          </div>
        </div>
        <div class="form-group">
          <label for="event-time" class="col-sm-2 control-label">Time</label>
          <div class="col-sm-3">
            <input type="date" name="eventDate" class="form-control" id="event-date" placeholder="Date">
          </div>
          <div class="col-sm-3">
            <input type="time" name="eventTime" class="form-control" id="event-time" placeholder="Time">
          </div>
        </div>

        <row>
        <div class="form-group">
          <label for="event-detail" class="col-sm-2 control-label">Detail</label>
          <div class="col-sm-6">
            <textarea name="eventDetail" class="form-control" rows="3" id="event-detail" placeholder="Detail"></textarea>
          </div>
        </div>
        </row>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      </form>
    </div><!-- /.container -->
    <% include ../partials/foot.ejs%>
  </body>
</html>